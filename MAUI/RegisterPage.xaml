<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.RegisterPage"
             Title="Register">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">
            <Label Text="Full Name" />
            <Entry x:Name="nameEntry" Placeholder="Enter your full name" />

            <Label Text="Username" />
            <Entry x:Name="usernameEntry" Placeholder="Choose a username" />

            <Label Text="Password" />
            <Entry x:Name="passwordEntry" IsPassword="True" Placeholder="Enter password" />

            <Label Text="Confirm Password" />
            <Entry x:Name="confirmPasswordEntry" IsPassword="True" Placeholder="Re-enter password" />

            <CheckBox x:Name="termsCheckbox" />
            <Label Text="I agree to the privacy policy" />

            <Button Text="Register" Clicked="OnRegisterClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
