<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.MainPage"
             Title="Login"
             BackgroundColor="Black">
             
    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Username" />
        <Entry x:Name="usernameEntry" Placeholder="Enter username" />

        <Label Text="Password" />
        <Entry x:Name="passwordEntry" Placeholder="Enter password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginClicked" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
        <Button Text="Forgot Password?" Clicked="OnForgotPasswordClicked" />

    </VerticalStackLayout>
</ContentPage>
